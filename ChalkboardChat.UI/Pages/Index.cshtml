@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}
<h1>Välkommen!</h1>
<form method="post">
    <div>
        <input type="text" 
            id="login" 
            name="UserName" 
            placeholder="Ange användarnamn" 
            required 
            asp-for="UserName" />
    </div>
    <div>
        <input type="password" 
            id="login" 
            name="Password" 
            placeholder="Ange lösenord" 
            required
        asp-for="Password" />
    </div>
    <button type="submit">Logga in</button>
</form>
<a asp-page="/Register">Ännu inte medlem? Registrera dig!</a>
